phase-color= #6a6

.board

	.phase
		display block
		float left
		height 100%
		width 20%
		li
			list-style-type none
			

	
	.tasks
		margin 0
		height 100%
		&.ui-state-hover
			opacity 80%
		
		padding 0 10px
		
		.task
			&.filtered-out
				opacity 0.25
			border 2px solid phase-color
			border-radius 4px
			margin-top 7px
			padding 10px
			h2
				margin 0
	
	for phase in 1..5
		.phase:nth-child({phase})
			background-color: lighten(phase-color,20% * (6- phase))

	&.compact
		.task
			h2
				line-height 1.2
				font-size 20px
				margin-bottom 4px
			padding-top 4px
			padding-bottom 4px

			p
				display none
				padding-bottom 0px

.loading-overlay
	display none
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color black
	opacity .7
	.loading-message
		text-align center
		position absolute
		width 100%
		top 50%
		font-size 24px
		color white