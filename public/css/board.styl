phase-color= #6a6

body
	background-color #6a6

.board

	.phase
		display block
		float left
		height 100%
		li
			list-style-type none
		>.title
			position relative
			top 40px
			margin-bottom -5px
			text-align center

	
	.tasks
		margin 0
		position relative
		top 40px

		&.ui-state-hover
			opacity 80%
		
		padding 0 10px
		
		.task
			&.filtered-out
				opacity 0.25
			border 2px solid phase-color
			border-radius 4px
			margin-top 7px
			padding 10px
			h2
				margin 0 0 5px
				line-height 1.2
			p
				margin-bottom 0px

	for noOfPhases in 2..8
		for phase in 1..noOfPhases
			.phase._{phase}of{noOfPhases}
				width: (100%/noOfPhases)
				background-color: lighten(phase-color,(100%/noOfPhases) * (noOfPhases + 1 - phase))

	&.compact
		.task
			h2
				line-height 1.2
				font-size 20px
				margin-bottom 4px
			padding-top 4px
			padding-bottom 4px

			p
				display none
				padding-bottom 0px

.loading-overlay
	display none
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color black
	opacity .7
	.loading-message
		text-align center
		position absolute
		width 100%
		top 50%
		font-size 24px
		color white